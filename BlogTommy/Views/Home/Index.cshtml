<html lang="en" data-bs-theme="auto">
<head>
    <script src="../assets/js/color-modes.js"></script>

    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">


    <link rel="canonical" href="https://getbootstrap.com/docs/5.3/examples/blog/">




    <link href="../assets/dist/css/bootstrap.min.css" rel="stylesheet">

    <style>
        
        .categories-buttons {
            display: flex;
            flex-direction: column;
            align-items: center;
            gap: 15px;
        }

        .category-grid {
            display: grid;
            grid-template-columns: repeat(2, 1fr); /* DOS COLUMNAS */
            gap: 10px;
            width: 100%;
            max-width: 300px; /* Ajusta el ancho según tu diseño */
        }

        .categories-buttons .btn {
            background: white;
            color: #0056b3;
            border: 2px solid #0056b3;
            border-radius: 12px;
            padding: 10px;
            font-size: 14px;
            font-weight: 600;
            transition: all 0.3s ease-in-out;
            text-align: center;
            width: 100%;
        }

            .categories-buttons .btn:hover {
                background: #0056b3;
                color: white;
                transform: scale(1.05);
                box-shadow: 0 4px 10px rgba(255, 255, 255, 0.2);
            }

            .categories-buttons .btn.active {
                background: #0056b3;
                color: white;
                border: 2px solid white;
            }

        .card {
            display: flex;
            flex-direction: column;
            height: 100%;
            min-height: 450px; /* Ajusta según necesites */
        }

        .card-body {
            flex-grow: 1;
            display: flex;
            flex-direction: column;
            justify-content: space-between;
        }

        .card img {
            height: 200px;
            object-fit: cover;
        }

        .card .btn {
            margin-top: auto; /* Empuja el botón hacia la parte inferior */
            align-self: center;
        }
        .bd-placeholder-img {
            font-size: 1.125rem;
            text-anchor: middle;
            -webkit-user-select: none;
            -moz-user-select: none;
            user-select: none;
        }


        .b-example-divider {
            width: 100%;
            height: 3rem;
            background-color: rgba(0, 0, 0, .1);
            border: solid rgba(0, 0, 0, .15);
            border-width: 1px 0;
            box-shadow: inset 0 .5em 1.5em rgba(0, 0, 0, .1), inset 0 .125em .5em rgba(0, 0, 0, .15);
        }

        .b-example-vr {
            flex-shrink: 0;
            width: 1.5rem;
            height: 100vh;
        }

        .bi {
            vertical-align: -.125em;
            fill: currentColor;
        }

        .nav-scroller {
            position: relative;
            z-index: 2;
            height: 2.75rem;
            overflow-y: hidden;
        }

            .nav-scroller .nav {
                display: flex;
                flex-wrap: nowrap;
                padding-bottom: 1rem;
                margin-top: -1px;
                overflow-x: auto;
                text-align: center;
                white-space: nowrap;
                -webkit-overflow-scrolling: touch;
            }

        .btn-bd-primary {
            --bd-violet-bg: #712cf9;
            --bd-violet-rgb: 112.520718, 44.062154, 249.437846;
            --bs-btn-font-weight: 600;
            --bs-btn-color: var(--bs-white);
            --bs-btn-bg: var(--bd-violet-bg);
            --bs-btn-border-color: var(--bd-violet-bg);
            --bs-btn-hover-color: var(--bs-white);
            --bs-btn-hover-bg: #6528e0;
            --bs-btn-hover-border-color: #6528e0;
            --bs-btn-focus-shadow-rgb: var(--bd-violet-rgb);
            --bs-btn-active-color: var(--bs-btn-hover-color);
            --bs-btn-active-bg: #5a23c8;
            --bs-btn-active-border-color: #5a23c8;
        }

        .bd-mode-toggle {
            z-index: 1500;
        }

            .bd-mode-toggle .dropdown-menu .active .bi {
                display: block !important;
            }

        .bg {
            animation: slide 6s ease-in-out infinite alternate;
            background-image: linear-gradient(-60deg, #003366 50%, #3498db 50%);
            bottom: 0;
            left: -50%;
            opacity: 0.5;
            position: fixed;
            right: -50%;
            top: 0;
            z-index: -1;
        }

        .bg2 {
            animation-direction: alternate-reverse;
            animation-duration: 8s;
        }

        .bg3 {
            animation-duration: 10s;
        }

        @@keyframes slide {
            0% {
                transform: translateX(-25%);
            }

            100% {
                transform: translateX(25%);
            }
        }

    </style>


    <!-- Custom styles for this template -->
    <link href="https://fonts.googleapis.com/css?family=Playfair&#43;Display:700,900&amp;display=swap" rel="stylesheet">
    <!-- Custom styles for this template -->
    <link href="blog.css" rel="stylesheet">

    <img src="~/images/Titulo.gif" style="width: 100%; height: 70vh; object-fit: cover; margin-bottom: 20px" alt="Título">
</head>

<body>

    <div class="bg"></div>
    <div class="bg bg2"></div>
    <div class="bg bg3"></div>

    <main class="container">

        <div class="row mb-2">
            @foreach (var post in (List<Post>)ViewData["RecentPosts"])
            {
                <div class="col-md-6 mb-3">
                    <div class="row g-0 border rounded overflow-hidden shadow-sm position-relative" style="background-color: white; height: 100%;">

                        <div class="col-8 p-4 d-flex flex-column position-static">
                            <strong class="d-inline-block mb-2 text-primary-emphasis">@post.PostCategories.FirstOrDefault()?.Category.Name</strong>
                            <h3 class="mb-0">@post.Title</h3>
                            <div class="mb-1 text-body-secondary">Publicado: @post.CreatedAt.ToString("MMM dd")</div>
                            <p class="card-text mb-auto">@post.Content.Substring(0, Math.Min(post.Content.Length, 100))...</p>
                            <a class="nav-link text-dark" asp-controller="Post"
                               asp-action="PostDetails" asp-route-id="@post.Id">Leer más</a>
                        </div>

                        <div class="col-4 p-0 d-none d-lg-block">
                            <img src="https://www.usatoday.com/gcdn/presto/2023/06/15/USAT/b031760f-26da-42a6-b626-fd20953a2743-SquarelogoPNG.png?crop=2055,2055,x0,y0"
                                 alt="@post.Title"
                                 class="bd-placeholder-img w-100 h-100 object-cover">
                        </div>
                    </div>
                </div>
            }
        </div>

        <div class="row g-5">
            <div class="col-md-8">
                <h3 class="pb-4 mb-4 text-light fw-bold border-bottom">
                    Nuestros Posts
                </h3>

                <article class="blog-post">

                    <div class="row" id="posts-container">
                        @foreach (var post in ViewData["AllPosts"] as List<Post>)
                        {
                            var categoryClass = post.PostCategories?.Any() == true
                            ? string.Join(" category-", post.PostCategories.Select(c => c.CategoryId))
                            : "no-category";

                            var categoryNames = post.PostCategories?.Any() == true
                            ? post.PostCategories.Select(c => c.Category.Name).ToList()
                            : new List<string> { "Sin categoría" };

                            <div class="col-md-4 mb-4 post-item category-@categoryClass">
                                <div class="card h-100 d-flex flex-column">
                                    <img src="https://www.usatoday.com/gcdn/presto/2023/06/15/USAT/b031760f-26da-42a6-b626-fd20953a2743-SquarelogoPNG.png?crop=2055,2055,x0,y0"
                                         class="card-img-top" alt="@post.Title" style="height: 200px; object-fit: cover;" />
                                    <div class="card-body d-flex flex-column">
                                        <h5 class="card-title">@post.Title</h5>
                                        <p class="card-text"><small class="text-muted">Publicado: @post.CreatedAt.ToString("dd MMM yyyy")</small></p>

                                        @if (categoryNames != null && categoryNames.Any())
                                        {
                                            <p class="text-muted">
                                                Categoría: @string.Join(", ", categoryNames)
                                            </p>
                                        }

                                        <a class="nav-link text-dark" asp-controller="Post" 
                                        asp-action="PostDetails" asp-route-id="@post.Id">Leer más</a>
                                    </div>
                                </div>
                            </div>
                        }
                    </div>

                </article>

            </div>

            <div class="col-md-4">
                <div class="position-sticky" style="top: 2rem;">
                    <div class="p-4 mb-3 bg-body-tertiary rounded">
                        <h4 class="fst-italic">About</h4>
                        <p class="mb-0">
                            Customize this section to tell your visitors a little bit about your publication,
                            writers, content, or something else entirely. Totally up to you.
                        </p>
                    </div>
                    <div class="col-md-4">
                        <h3 class="text-light fw-bold mb-3 text-center">Categorías</h3>
                        <div class="categories-buttons d-flex flex-column align-items-center">
                            <button id="Todas" class="btn category-filter active mb-2" data-filter="*">
                                Todas
                            </button>
                            <div class="category-grid">
                                @foreach (var category in ViewData["Categories"] as List<Category>)
                                {
                                    <button class="btn category-filter" data-filter=".category-@category.Id">
                                        @category.Name
                                    </button>
                                }
                            </div>
                        </div>
                    </div>
                    <br />


                    <div class="p-4 mb-3 bg-body-tertiary rounded">
                        <h4 class="fst-italic">Contacto</h4>
                        <ol class="list-unstyled">
                            <li><a href="#">GitHub</a></li>
                            <li><a href="#">Twitter</a></li>
                            <li><a href="#">Facebook</a></li>
                        </ol>
                    </div>
                </div>
            </div>
        </div>

    </main>

    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="../assets/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://unpkg.com/isotope-layout@3.0.6/dist/isotope.pkgd.min.js"></script>
    <script>

        // Inicializa el grid de Isotope
        var $grid = $('#posts-container').isotope({
            itemSelector: '.post-item',
            layoutMode: 'fitRows'
        });
        // Maneja el clic en los filtros de categorías
        $('.category-filter').on('click', function() {
            var filterValue = $(this).attr('data-filter');
            $grid.isotope({ filter: filterValue });

            // Cambia la clase 'active' de los botones para reflejar el filtro seleccionado
            $('.category-filter').removeClass('active');
            $(this).addClass('active');
        });


    </script>
    <script>
        $(document).ready(function() {
            var buttonTodas = document.getElementById("Todas");
            if (buttonTodas) {
                buttonTodas.click(); // Simula un clic en el botón "Todas"
            }
        });
    </script>

</body>
</html>