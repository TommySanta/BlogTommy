@model BlogTommy.Models.Post
@using System.Linq

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@Model.Title - Detalles del Post</title>
    <!-- Bootstrap 5 CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <!-- Font Awesome -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <!-- Animate.css -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/4.1.1/animate.min.css">
    <style>
        :root {
            --primary-color: #3498db;
            --primary-dark: #2980b9;
            --secondary-color: #2c3e50;
            --light-bg: #f8f9fa;
            --border-radius: 10px;
        }

        body {
            background-color: #f5f7f9;
            color: #333;
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            padding-top: 20px;
            padding-bottom: 50px;
        }

        .page-container {
            max-width: 900px;
            margin: 0 auto;
            background: white;
            border-radius: var(--border-radius);
            box-shadow: 0 0 30px rgba(0, 0, 0, 0.1);
            overflow: hidden;
            transition: all 0.3s ease;
        }

            .page-container:hover {
                box-shadow: 0 0 40px rgba(0, 0, 0, 0.15);
            }

        .header {
            background: linear-gradient(135deg, var(--primary-color) 0%, var(--primary-dark) 100%);
            color: white;
            padding: 30px;
            border-radius: var(--border-radius) var(--border-radius) 0 0;
            margin-bottom: 20px;
        }

            .header h2 {
                margin: 0;
                font-weight: 600;
                display: flex;
                align-items: center;
            }

                .header h2 i {
                    margin-right: 15px;
                }

        .post-container {
            padding: 0 30px 30px 30px;
        }

        .post-image-container {
            margin: -20px -30px 30px -30px;
            position: relative;
            overflow: hidden;
            max-height: 450px;
        }

        .post-image {
            width: 100%;
            height: 450px;
            object-fit: cover;
            transition: transform 0.3s ease;
        }

            .post-image:hover {
                transform: scale(1.03);
            }

        .post-title {
            font-size: 2.5rem;
            font-weight: 700;
            color: var(--secondary-color);
            margin-bottom: 20px;
            text-align: center;
            position: relative;
            padding-bottom: 15px;
        }

            .post-title:after {
                content: '';
                position: absolute;
                bottom: 0;
                left: 50%;
                transform: translateX(-50%);
                width: 80px;
                height: 4px;
                background: linear-gradient(90deg, var(--primary-color), var(--primary-dark));
                border-radius: 2px;
            }

        .post-meta {
            display: flex;
            align-items: center;
            justify-content: space-between;
            padding: 15px 0;
            margin-bottom: 25px;
            border-bottom: 1px solid #e0e0e0;
        }

        .post-author {
            display: flex;
            align-items: center;
        }

        .author-avatar {
            width: 50px;
            height: 50px;
            border-radius: 50%;
            margin-right: 15px;
            object-fit: cover;
            border: 3px solid var(--primary-color);
        }

        .author-name {
            font-weight: 600;
            color: var(--secondary-color);
            margin: 0;
        }

        .post-date {
            color: #777;
            font-size: 0.9rem;
            margin-top: 5px;
        }

        .post-stats {
            display: flex;
            align-items: center;
        }

        .stat-item {
            display: flex;
            align-items: center;
            margin-left: 20px;
            color: #777;
        }

            .stat-item i {
                margin-right: 5px;
                color: var(--primary-color);
            }

        .post-category {
            display: inline-block;
            padding: 6px 15px;
            background-color: rgba(52, 152, 219, 0.1);
            color: var(--primary-color);
            border-radius: 20px;
            margin-left: 15px;
            font-weight: 600;
            font-size: 0.9rem;
        }

        .post-content {
            margin-bottom: 40px;
            line-height: 1.8;
            color: #444;
        }

            .post-content p {
                margin-bottom: 20px;
            }

            .post-content img {
                max-width: 100%;
                border-radius: var(--border-radius);
                margin: 20px 0;
            }

        .post-tags {
            margin: 30px 0;
        }

        .post-tag {
            display: inline-block;
            padding: 5px 12px;
            background-color: rgba(52, 152, 219, 0.1);
            color: var(--primary-color);
            border-radius: 20px;
            margin: 5px;
            font-size: 0.85rem;
            transition: all 0.3s ease;
        }

            .post-tag:hover {
                background-color: var(--primary-color);
                color: white;
            }

        .section-title {
            font-size: 1.6rem;
            font-weight: 600;
            color: var(--secondary-color);
            margin: 40px 0 20px 0;
            display: flex;
            align-items: center;
        }

            .section-title i {
                margin-right: 10px;
                color: var(--primary-color);
            }

        .comment-container {
            margin-bottom: 30px;
        }

        .comment-card {
            background-color: white;
            border-radius: var(--border-radius);
            box-shadow: 0 5px 15px rgba(0, 0, 0, 0.05);
            padding: 20px;
            margin-bottom: 20px;
            transition: all 0.3s ease;
            border-left: 4px solid var(--primary-color);
        }

            .comment-card:hover {
                transform: translateY(-3px);
                box-shadow: 0 8px 25px rgba(0, 0, 0, 0.1);
            }

        .comment-header {
            display: flex;
            align-items: center;
            margin-bottom: 15px;
        }

        .comment-avatar {
            width: 40px;
            height: 40px;
            border-radius: 50%;
            margin-right: 15px;
            object-fit: cover;
        }

        .comment-author {
            font-weight: 600;
            color: var(--secondary-color);
            margin: 0;
        }

        .comment-date {
            color: #777;
            font-size: 0.8rem;
            margin-left: auto;
        }

        .comment-content {
            color: #555;
            line-height: 1.6;
        }

        .add-comment {
            background-color: var(--light-bg);
            border-radius: var(--border-radius);
            padding: 25px;
            margin-top: 30px;
        }

        .form-label {
            font-weight: 600;
            color: var(--secondary-color);
            margin-bottom: 8px;
        }

        .form-control {
            border-radius: var(--border-radius);
            padding: 12px 15px;
            border: 2px solid #e0e0e0;
            transition: all 0.3s ease;
        }

            .form-control:focus {
                border-color: var(--primary-color);
                box-shadow: 0 0 0 0.25rem rgba(52, 152, 219, 0.25);
            }

        .btn-primary {
            background-color: var(--primary-color);
            border-color: var(--primary-color);
            padding: 12px 30px;
            border-radius: var(--border-radius);
            font-weight: 600;
            transition: all 0.3s ease;
        }

            .btn-primary:hover {
                background-color: var(--primary-dark);
                border-color: var(--primary-dark);
                transform: translateY(-2px);
                box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            }

            .btn-primary:active {
                transform: translateY(0);
            }

            .btn-primary i {
                margin-right: 10px;
            }

        .btn-outline-primary {
            color: var(--primary-color);
            border-color: var(--primary-color);
            padding: 12px 30px;
            border-radius: var(--border-radius);
            font-weight: 600;
            transition: all 0.3s ease;
        }

            .btn-outline-primary:hover {
                background-color: var(--primary-color);
                color: white;
                transform: translateY(-2px);
                box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            }

            .btn-outline-primary i {
                margin-right: 10px;
            }

        .actions-container {
            display: flex;
            justify-content: center;
            margin-top: 40px;
            padding-top: 20px;
            border-top: 1px solid #e0e0e0;
        }

        .social-share {
            display: flex;
            margin-top: 30px;
            justify-content: center;
        }

        .share-button {
            width: 40px;
            height: 40px;
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            margin: 0 10px;
            color: white;
            transition: all 0.3s ease;
        }

            .share-button:hover {
                transform: translateY(-3px);
                box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
            }

        .share-facebook {
            background-color: #3b5998;
        }

        .share-twitter {
            background-color: #1da1f2;
        }

        .share-linkedin {
            background-color: #0077b5;
        }

        .share-whatsapp {
            background-color: #25d366;
        }

        /* Animaciones de entrada */
        .fade-in-up {
            animation: fadeInUp 0.5s ease forwards;
        }

        @@keyframes fadeInUp {
            from

        {
            opacity: 0;
            transform: translateY(20px);
        }

        to {
            opacity: 1;
            transform: translateY(0);
        }

        }

        /* Responsive */
        @@media (max-width: 768px) {
            .post-meta

        {
            flex-direction: column;
            align-items: flex-start;
        }

        .post-stats {
            margin-top: 15px;
        }

        .post-image {
            height: 300px;
        }

        .post-title {
            font-size: 2rem;
        }

        }
    </style>
</head>
<body>
    <div class="container">
        <div class="page-container animate__animated animate__fadeIn">
            <div class="header">
                <h2 class="animate__animated animate__fadeInRight"><i class="fas fa-book-open"></i> Detalles del Post</h2>
            </div>

            <div class="post-container">
                <!-- Imagen principal -->
                <div class="post-image-container fade-in-up" style="animation-delay: 0.1s;">
                    <img src="@Model.Image_url" alt="@Model.Title" class="post-image">
                </div>

                <!-- Título -->
                <h1 class="post-title fade-in-up" style="animation-delay: 0.2s;">@Model.Title</h1>

                <!-- Metadatos -->
                <div class="post-meta fade-in-up" style="animation-delay: 0.3s;">
                    <div class="post-author">
                        <img src="/api/placeholder/50/50" alt="@Model.User.Username" class="author-avatar">
                        <div>
                            <h5 class="author-name">@Model.User.Username</h5>
                            <div class="post-date"><i class="far fa-calendar-alt"></i> @Model.CreatedAt.ToString("dd MMM yyyy")</div>
                        </div>
                        @if (Model.PostCategories != null && Model.PostCategories.Any())
                        {
                            <span class="post-category">@Model.PostCategories.FirstOrDefault()?.Category?.Name</span>
                        }
                    </div>
                    <div class="post-stats">
                        <div class="stat-item">
                            <i class="far fa-eye"></i>
                            <span>@(new Random().Next(50, 500)) Visitas</span>
                        </div>
                        <div class="stat-item">
                            <i class="far fa-comment"></i>
                            <span>@(Model.Comments?.Count ?? 0) Comentarios</span>
                        </div>
                    </div>
                </div>

                <!-- Contenido -->
                <div class="post-content fade-in-up" style="animation-delay: 0.4s;">
                    @Html.Raw(Model.Content)
                </div>

                <!-- Etiquetas -->
                <div class="post-tags fade-in-up" style="animation-delay: 0.5s;">
                    @if (Model.PostCategories != null && Model.PostCategories.Any())
                    {
                        foreach (var postCategory in Model.PostCategories)
                        {
                            <span class="post-tag">@postCategory.Category?.Name</span>
                        }
                    }
                    else
                    {
                        <span class="post-tag">Sin categorías</span>
                    }
                </div>

                <!-- Compartir en redes sociales -->
                <div class="social-share fade-in-up" style="animation-delay: 0.6s;">
                    <a href="#" class="share-button share-facebook"><i class="fab fa-facebook-f"></i></a>
                    <a href="#" class="share-button share-twitter"><i class="fab fa-twitter"></i></a>
                    <a href="#" class="share-button share-linkedin"><i class="fab fa-linkedin-in"></i></a>
                    <a href="#" class="share-button share-whatsapp"><i class="fab fa-whatsapp"></i></a>
                </div>

                <!-- Sección de comentarios -->
                <h3 class="section-title fade-in-up" style="animation-delay: 0.7s;"><i class="fas fa-comments"></i> Comentarios (@(Model.Comments?.Count ?? 0))</h3>

                <div class="comment-container fade-in-up" style="animation-delay: 0.8s;">
                    @if (Model.Comments != null && Model.Comments.Any())
                    {
                        foreach (var comment in Model.Comments)
                        {
                            <div class="comment-card">
                                <div class="comment-header">
                                    <img src="/api/placeholder/40/40" alt="@comment.User?.Username" class="comment-avatar">
                                    <h5 class="comment-author">@comment.User?.Username</h5>
                                    <span class="comment-date">@comment.CreatedAt.ToString("dd MMM yyyy, HH:mm")</span>
                                </div>
                                <div class="comment-content">
                                    @comment.Content
                                </div>
                            </div>
                        }
                    }
                    else
                    {
                        <div class="alert alert-info">
                            <i class="fas fa-info-circle"></i> No hay comentarios aún. ¡Sé el primero en comentar!
                        </div>
                    }
                </div>

                <!-- Formulario para agregar comentarios -->
                <div class="add-comment fade-in-up" style="animation-delay: 0.9s;">
                    <h4 class="mb-3"><i class="fas fa-pen"></i> Deja un comentario</h4>
                    <form asp-action="AddComment" asp-controller="Post" asp-route-id="@Model.Id" method="post">
                        <div class="form-group mb-3">
                            <label for="commentContent" class="form-label">Tu comentario</label>
                            <textarea id="commentContent" name="Content" class="form-control" rows="4" placeholder="Escribe tu comentario aquí..."></textarea>
                        </div>
                        <button type="submit" class="btn btn-primary">
                            <i class="fas fa-paper-plane"></i> Enviar comentario
                        </button>
                    </form>
                </div>

                <!-- Botones de acción -->
                <div class="actions-container fade-in-up" style="animation-delay: 1s;">
                    <a href="@Url.Action("Index", "Home")" class="btn btn-outline-primary">
                        <i class="fas fa-arrow-left"></i> Volver a la página principal
                    </a>
                </div>
            </div>
        </div>
    </div>

    <!-- Bootstrap JS y Popper -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

    <script>
        // Agregar comportamiento interactivo a los comentarios
        document.querySelectorAll('.comment-card').forEach(card => {
            card.addEventListener('mouseenter', function() {
                this.style.borderLeftWidth = '6px';
            });

            card.addEventListener('mouseleave', function() {
                this.style.borderLeftWidth = '4px';
            });
        });

        // Comportamiento para botones de compartir
        document.querySelectorAll('.share-button').forEach(button => {
            button.addEventListener('click', function(e) {
                e.preventDefault();
                // Aquí se podría implementar la funcionalidad real de compartir
                alert('Compartiendo contenido...');
            });
        });
    </script>
</body>
</html>